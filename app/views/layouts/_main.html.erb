
<div class="carousel slide" data-interval="5000" data-ride="carousel" id=
    "carousel-example-generic">
        <!-- Indicators -->
        
        <ol class="carousel-indicators">
            <li class="active" data-slide-to="0" data-target="#carousel-example-generic"></li>

            <li data-slide-to="1" data-target="#carousel-example-generic"></li>

            <li data-slide-to="2" data-target="#carousel-example-generic"></li>
        </ol><!-- Wrapper for slides -->

        <div class="carousel-inner" role="listbox">
            <% @products.each do |product| %>
            <div class="item <%=" active" if product == @products.first %>">
               <%= image_tag(product.image_url) %>
                <div class="container">
                <div class="carousel-caption">
                        <p><%= render partial: "layouts/info", flash: flash %>  </p>       

<h1>Welcome to my App!</h1>
    <p>
    <% if user_signed_in? %>
    <%= link_to "New Product", new_product_path , class: "btn btn-primary btn-lg" %>
    <%= link_to "View Products", products_path , class: "btn btn-default btn-lg" %>
    <% else %>      
    </p>

<p>
<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
<%= link_to "Log In", new_user_session_path, class: "btn btn-default btn-lg" %>
</p>
    <% end %>
              <p>  <%= product.name %> </p>
                </div>
                </div>
            </div>
            <% end %>

        </div><!-- Left and right controls -->

        <a class="left carousel-control" data-slide="prev" href=
        "#carousel-example-generic"><span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span></a> <a class=
        "right carousel-control" data-slide="next" href=
        "#carousel-example-generic"><span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span></a>
    </div>