<div class = "container">

<h1>Contact</h1>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>

<div class="row container">
	<div class="col-md-6">
		<div class="form-group">
			<%= label_tag :name, "Name" %>
			<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Full Name" %>
		</div>
		<div class="form-group">
			<%= label_tag :email, "Email Address" %>
			<%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
		</div>
		<div class="form-group">
			<%= label_tag :message, "Message" %>
			<%= text_area_tag :message, nil, class: "form-control contact-form", placeholder: "Enter Message" %>
		</div>
	</div>
	<div id="visible-comment"></div>
	<div id="charCount"></div>
</div>
<%= submit_tag "Send", class:"btn btn-primary" %>
<% end  %>
</div>
<br>